
{{summary = Customers.ServiceSummary;""}}

<hr class="clearfix form-line" />
<hr class="clearfix form-line" />

<div class="form-group col-xs-12">
    <div class="col-xs-2">
        <h3>Services</h3>
    </div>

    <div class="form-group col-xs-8">
        <div>
            <div class="col-xs-3">
                <label for="GrandWeekly" class="control-label label-push-content"> Weekly Total</label>
                <div class="detail-result" id="GrandWeekly">${{summary.GrandWeekly}}</div>
            </div>
            <div class="col-xs-3">
                <label for="GrandMonthly" class="control-label label-push-content"> Monthly Total</label>
                <div class="detail-result" id="GrandMonthly">${{summary.GrandMonthly}}</div>
            </div>
            <div class="col-xs-3">
                <label for="GrandEmpPay" class="control-label label-push-content"> Emp Monthly Total</label>
                <div class="detail-result" id="GrandEmpPay">${{summary.GrandEmpPay}}</div>
            </div>
            <div class="col-xs-3">
                <a class="btn btn-sm btn-primary btn-inverse" href="~/ServiceDetails/Edit?id={{Customers.Customer.CustomerId}}">Add/Edit Services</a>
            </div>
        </div>
        <div class="form-group clearfix form-line"></div>
    </div>
</div>

<div ng-repeat="dailyService in summary.DailyServices">
    <div class="form-group">
        <div class="col-xs-12">
            <div class="col-xs-2">
                <div class="detail-result bold">{{getWeekday(dailyService.Day)}} - {{dailyService.NumDogs}} dog<span ng-show="dailyService.NumDogs > 1">s</span></div>
                <div class="detail-result">Crew: {{dailyService.CrewName}}</div>
                <div class="detail-result">Pay: ${{dailyService.EmpAmount}}</div>
            </div>
            <div class="col-xs-8">
                <div class="col-xs-3">
                    <label for="Services" class="control-label label-push-content">Services</label>
                    <div class="detail-result">
                        <div ng-repeat="descr in dailyService.ServiceList">{{descr}}</div>
                    </div>
                </div>
                <div class="col-xs-3">
                    <label for="WeeklyTotal" class="control-label label-push-content">Week</label>
                    <div class="detail-result">${{dailyService.WeeklyTotal}}</div>
                </div>
                <div class="col-xs-3">
                    <label for="Total" class="control-label label-push-content">Month</label>
                    <div class="detail-result">${{dailyService.Total}}</div>
                </div>
            </div>
        </div>
    </div>
</div>
    



