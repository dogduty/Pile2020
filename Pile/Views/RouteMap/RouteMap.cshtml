
@{
    ViewBag.Title = "Routes";
    Layout = "~/Views/Shared/_LayoutAngular.cshtml";
}
<script type="text/javascript">var map;</script>
<script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAj_3viEuL3IUNeg_e3_4DXFh4RJlUN99c&libraries=drawing" type="text/javascript"></script>
<script src="~/Scripts/APIScripts/Routes/MapFunctions.js?v1.13" type="text/javascript"></script>
<script src="~/Scripts/APIScripts/Routes/ViewRoutes.js?v=1.10"></script>



<div data-ng-app="APIModule">
    <div ng-controller="Generic" ng-init="init('Routes', 'getRouteData')">
        <div class="row">
            <div>
                <h2>Routes <span ng-hide="days">. . . Loading . . . </span></h2>
                <div id="map-container" class="col-xs-9">
                    <div id="map_canvas" style="width: 725px; height: 600px;"></div>
                </div>

                <div class="row">
                    <div class="col-xs-3">
                        <h4>Crews</h4>
                        <div class="col-xs-12" ng-repeat="crew in crews">
                            <input type="checkbox" ng-model="crew.selected" ng-change="toggleMarker()" /> {{crew.item.Id}} - {{crew.item.Employees[0].FirstName}}
                        </div>
                        <hr />
                        <h4>Days</h4>
                        <div class="col-xs-12" ng-repeat="day in days">
                            <input type="checkbox" ng-model="day.selected" ng-change="toggleMarker()" /> {{day.item.Dow}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    google.maps.event.addDomListener(window, 'load', initMap);
</script>


