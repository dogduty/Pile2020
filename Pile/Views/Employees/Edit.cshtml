
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAngular.cshtml";
}

<script src="~/Scripts/APIScripts/Employees/Emp.js?v=1.06"></script>



<div data-ng-app="APIModule">
    <div ng-controller="Generic" ng-init="init('Employees', 'getDetailQueryId')">

        @Html.ActionLink("Employee List", "Index", "Employees")

        {{emp = Employees.Employee;""}}
        {{usr = Employees.User;""}}
        
        <h2>
            {{Employees.FirstName}} {{Employees.LastName}}<span ng-hide="Employees">. . . Loading . . . </span>
        </h2>

        <h5>
            <span ng-sho="Employees">
                <span ng-hide="activating">
                    <span ng-show="usr" class="alert-success">User is Active (has a login).</span>
                    <span ng-hide="usr" class="alert-danger">
                        User is Inactive (does not have a login).
                        <input type="button" class="btn btn-xs btn-success" value="activate" ng-click="empActivate()" />
                    </span>
                </span>
                <span ng-show="activating" class="alert-warning">
                    Currently Activating this User.  Save to complete.
                </span>
            </span>
        </h5>
        <div ng-if="errors" class="alert-danger"> {{errors}}</div>
        <div ng-if="messages" class="alert-success"> {{messages}}</div>
        <hr class="clearfix form-line" />

        <div id="EmployeeEdit">

            <div class="col-xs-12">
                <div class="form-group col-xs-3">
                    <label for="FirstName" class="control-label label-push-content">First Name</label>
                    <div class="detail-result">
                        <input id="FirstName" type="text" class="text-box single-line" ng-model="Employees.FirstName" />
                    </div>
                </div>

                <div class="form-group col-xs-3">
                    <label for="LastName" class="control-label label-push-content">Last Name</label>
                    <div class="detail-result">
                        <input id="LastName" type="text" class="text-box single-line" ng-model="Employees.LastName" />
                    </div>
                </div>
            </div>


            <div class="col-xs-12">
                <div class="form-group col-xs-3">
                    <label for="UserName" class="control-label label-push-content">User Name</label>
                    <div class="detail-result">
                        <input id="UserName" type="text" class="text-box single-line" ng-model="usr.UserName" />
                    </div>
                </div>

                <div class="form-group col-xs-3">
                    <label for="Email" class="control-label label-push-content">Email</label>
                    <div class="detail-result">
                        <input id="Email" type="text" class="text-box single-line" ng-model="usr.Email" />
                    </div>
                </div>
            </div>

            <div class="col-xs-12">
                <div class="form-group col-xs-3">
                    <label for="PayPerc" class="control-label label-push-content">Pay %</label>
                    <div class="detail-result">
                        <input id="PayPerc" type="text" class="text-box single-line" ng-model="Employees.PayPerc" />
                    </div>
                </div>

                <div class="form-group col-xs-3">
                    <label for="TruckID" class="control-label label-push-content">Truck ID</label>
                    <div class="detail-result">
                        <input id="TruckID" type="text" class="text-box single-line" ng-model="Employees.TruckID" />
                    </div>
                </div>

            </div>

            <div class="col-xs-12">
                <div class="form-group col-xs-3">
                    <label for="StartDate" class="control-label label-push-content">Start Date</label>
                    <div class="detail-result">
                        <input id="StartDate" type="date" class="text-box single-line" ng-model="Employees.StartDate" />
                    </div>
                </div>

                <div class="form-group col-xs-3">
                    <label for="Address" class="control-label label-push-content">Address</label>
                    <div class="detail-result">
                        <input id="Address" type="text" class="text-box single-line" ng-model="Employees.Address" />
                    </div>
                </div>
            </div>

            <div class="col-xs-12">
                <div class="form-group col-xs-3">
                    <label for="City" class="control-label label-push-content">City</label>
                    <div class="detail-result">
                        <input id="City" type="text" class="text-box single-line" ng-model="Employees.City" />
                    </div>
                </div>

                <div class="form-group col-xs-3">
                    <label for="State" class="control-label label-push-content">State</label>
                    <div class="detail-result">
                        <input id="State" type="text" class="text-box single-line" ng-model="Employees.State" />
                    </div>
                </div>
            </div>

            <div class="col-xs-12">
                <div class="form-group col-xs-3">
                    <label for="Zip" class="control-label label-push-content">Zip</label>
                    <div class="detail-result">
                        <input id="Zip" type="text" class="text-box single-line" ng-model="Employees.Zip" />
                    </div>
                </div>

                <div class="form-group col-xs-3">
                    <label for="CompanyPhone" class="control-label label-push-content">Company Phone</label>
                    <div class="detail-result">
                        <input id="CompanyPhone" type="text" class="text-box single-line" ng-model="Employees.CompanyPhone" />
                    </div>
                </div>
            </div>

            <div class="col-xs-12">
                <div class="form-group col-xs-3">
                    <label for="MobilePhone" class="control-label label-push-content">Mobile Phone</label>
                    <div class="detail-result">
                        <input id="MobilePhone" type="text" class="text-box single-line" ng-model="Employees.MobilePhone" />
                    </div>
                </div>

                <div class="form-group col-xs-3">
                    <label for="HomePhone" class="control-label label-push-content">Home Phone</label>
                    <div class="detail-result">
                        <input id="HomePhone" type="text" class="text-box single-line" ng-model="Employees.HomePhone" />
                    </div>
                </div>
            </div>

            <hr class="clearfix form-line" />
            <input type="button" class="btn btn-sm btn-success" value="save" ng-click="save(Employees)"


        </div>
    </div>
</div>

<hr class="clearfix form-line" />